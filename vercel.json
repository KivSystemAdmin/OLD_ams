{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/src/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/dist/**/*"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/src/app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
